<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>

        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <!--formats-->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:background">@drawable/rounded_corners_small_white</item>
    </style>

    <style name="FoldingCellStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="FoldingCellContentViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="FoldingCellContentViewCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/rounded_corners_small_white</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_blue_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FragmentMoreButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/margin_medium</item>
        <item name="android:textColor">@color/text_header</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textColorHighlight">@color/color_white</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="android:textColorHint">@color/color_white</item>
        <item name="android:textColorLink">@color/color_white</item>
        <item name="android:textColorTertiary">@color/color_white</item>
        <item name="android:actionBarStyle">@style/FirebaseAuthActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="FirebaseAuthActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_white</item>

    </style>

</resources>
