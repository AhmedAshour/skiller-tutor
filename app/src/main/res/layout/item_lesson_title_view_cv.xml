<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_lesson_title_view_cv"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_title_view_height"
    android:background="@drawable/rounded_corners_small_white"
    app:cardCornerRadius="@dimen/roundness_card">

    <RelativeLayout
        android:id="@+id/item_lesson_title_view_cv_rl"
        android:layout_width="@dimen/item_title_view_btn_expand_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corners_title_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_navigation_white_menu_list" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:layout_toEndOf="@+id/item_lesson_title_view_cv_rl">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_lesson_title_view_cv_iv_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/item_lesson_title_view_cv_tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@+id/item_lesson_title_view_cv_iv_photo"
            android:gravity="center_vertical"
            android:text="John Doe"
            android:textColor="@color/text_header"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/margin_extra_small">

            <TextView
                android:id="@+id/item_lesson_title_view_cv_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:drawablePadding="@dimen/margin_extra_small"
                android:gravity="center_vertical"
                android:text="100"
                android:textColor="@color/color_red"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/item_lesson_title_view_cv_tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/item_lesson_title_view_cv_tv_price"
                android:gravity="center_vertical"
                android:text="LE"
                android:textColor="@color/color_red"
                android:textSize="@dimen/text_size_medium" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_lesson_title_view_cv_tv_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:drawablePadding="@dimen/margin_small"
                android:drawableStart="@drawable/ic_extra_small_black_skill"
                android:gravity="center_vertical"
                android:text="Session's Skill"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/item_lesson_title_view_cv_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:drawablePadding="@dimen/margin_small"
                android:drawableStart="@drawable/ic_small_extra_black_clock"
                android:gravity="center_vertical"
                android:text="Session's Date"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/item_lesson_title_view_cv_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:drawablePadding="@dimen/margin_small"
                android:drawableStart="@drawable/ic_extra_small_black_location"
                android:gravity="center_vertical"
                android:text="Session's Location"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
