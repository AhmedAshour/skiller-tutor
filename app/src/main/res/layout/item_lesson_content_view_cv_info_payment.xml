<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lesson_content_view_cv_info_payment"
    style="@style/FoldingCellContentViewCardStyle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="payment"
        android:textAllCaps="true"
        android:textColor="@color/text_header"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small">

        <TextView
            android:id="@+id/item_lesson_content_view_cv_info_payment_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_small"
            android:drawableStart="@drawable/ic_small_black_money"
            android:text="100"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_lesson_content_view_cv_info_payment_tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="LE"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_lesson_content_view_cv_info_payment_tv_hyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:text="-"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_lesson_content_view_cv_info_payment_tv_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</LinearLayout>