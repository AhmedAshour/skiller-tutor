<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_secondary_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium">

    <ImageButton
        android:id="@+id/item_secondary_bar_btn_edit"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners_small_white"
        android:src="@drawable/ic_black_edit"
        android:textAllCaps="true"
        android:textColor="@color/text_body"
        android:textSize="@dimen/text_size_large" />

    <ImageButton
        android:id="@+id/item_secondary_bar_btn_delete"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners_small_red"
        android:src="@drawable/ic_white_delete"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_large" />
</LinearLayout>