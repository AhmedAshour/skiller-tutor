<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cv_notes"
    style="@style/FoldingCellContentViewCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra_small"
        android:text="review"
        android:textAllCaps="true"
        android:textColor="@color/text_header"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/item_lesson_content_view_cv_review_rating_bar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:numStars="5"
        android:progressTint="#ED8A19"
        android:rating="3.3"
        android:scaleX=".7"
        android:scaleY=".7"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    <TextView
        android:id="@+id/item_lesson_content_view_cv_review_tv_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No written review added"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>